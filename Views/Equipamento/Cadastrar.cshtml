@model EquipamentoModel
@{
    ViewBag.Subtitulo = "Cadastrar Equipamento";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    
</header>
<hr>

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdEquipamento">
    <div class="form-group col-sm-8 col-lg-6">
        <label asp-for="@Model.Tag">Tag:</label><br>
        <input asp-for="@Model.Tag" class="form-control" autofocus>
        <span asp-validation-for="@Model.Tag" class="text-danger"></span>
    </div>

    <div class="form-group col-sm-8 col-lg-6">
        <label asp-for="@Model.Modelo">Modelo:</label><br>
        <input asp-for="@Model.Modelo" class="form-control" autofocus>
        <span asp-validation-for="@Model.Modelo" class="text-danger"></span>
    </div>

    
 <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>
