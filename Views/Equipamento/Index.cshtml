@model IEnumerable<EquipamentoModel>
@{
    ViewBag.Subtitulo = "Listagem de Equipamento";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Cadastrar" class="btn btn-primary">Novo Equipamento</a>
    </div>
</header>
<hr>

<partial name="_Mensagem"></partial>

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-btn-acao-esquerda">
        <thead>
            <tr>
                <th>Tag</th>
                <th>Modelo</th>
                <th>Status</th>
                <th>Operando</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var equipamento in Model)
            {
                <tr>
                    <td>@equipamento.Tag</td>
                    <td>@equipamento.Modelo</td>
                    <td>@equipamento.Status</td>
                    <td>@equipamento.Operando</td>
                    <td>
                        <a asp-action="Alterar" asp-route-id="@equipamento.IdEquipamento"class="btn btn-sm btn-secondary">Alterar</a>
                        <a asp-action="Excluir" asp-route-id="@equipamento.IdEquipamento" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma categoria cadastrada.</p>
}