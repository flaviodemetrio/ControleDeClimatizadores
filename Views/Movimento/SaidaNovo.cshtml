@model MovimentoModel
@{
    ViewBag.Subtitulo = "Adicionar Movimento de Saída";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    
</header>
<hr>

<form asp-action="SaidaNovo" class="row">
    <input type="hidden" asp-for="@Model.MovimentoId">
    <div class="form-group col-sm-8 col-lg-2">
        <label asp-for="@Model.NumeroContrato">Número do Contrato:</label><br>
        <input asp-for="@Model.NumeroContrato" class="form-control" autofocus>
        <span asp-validation-for="@Model.NumeroContrato" class="text-danger"></span>
    </div>
    
      <div class="form-group col-sm-8 col-lg-2">
                <label asp-for="@Model.cliente.RazaoSocial" class="control-label"></label>               
                <select asp-for="@Model.ClienteId" class="form-control" asp-items="@ViewBag.viewdatacliente"></select>
                

            </div>

     <div class="form-group col-sm-8 col-lg-2">
        <label asp-for="@Model.InicioLocacao">Início da Locação:</label><br>
        <input asp-for="@Model.InicioLocacao" class="form-control" autofocus>
        <span asp-validation-for="@Model.InicioLocacao" class="text-danger"></span>
    </div>
    
    
     <div class="form-group col-sm-8 col-lg-2">
        <label asp-for="@Model.FimLocacao">Fim da Locação:</label><br>
        <input asp-for="@Model.FimLocacao" class="form-control" autofocus>
        <span asp-validation-for="@Model.FimLocacao" class="text-danger"></span>
    </div>

       <div class="form-group col-sm-8 col-lg-2">
        <label asp-for="@Model.Obs">OBS:</label><br>
        <input asp-for="@Model.Obs" class="form-control" autofocus>
        <span asp-validation-for="@Model.Obs" class="text-danger"></span>
    </div>


   <div class="form-group col-sm-8 col-lg-2">
        <label asp-for="@Model.Obs">Equipamento:</label><br>
        <input asp-for="@Model.Obs" class="form-control" autofocus>
        <span asp-validation-for="@Model.Obs" class="text-danger"></span>
    </div>
    
    

    <div class="mt-3">
        <a asp-action="Saida" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>
